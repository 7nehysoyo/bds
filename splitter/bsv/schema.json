              "$id": "#/properties/tx/items/properties/vin/items",
              "type": "object",
              "title": "The Items Schema",
              "description": "An explanation about the purpose of this instance.",
              "anyOf": [
                {
                  "required": [
                  "coinbase",
                  "sequence"
                  ]
                },
                {
                  "required": [
                    "script_sig",
                    "sequence",
                    "tx_id_origin",
                    "vout_num_origin"
                  ]
                }
              ],
              "properties": {
                "coinbase": {
                  "$id": "#/properties/tx/items/properties/vin/items/properties/coinbase",
